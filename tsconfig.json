{
    "compilerOptions": {
        "module": "es6",
        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "allowJs": true,
        "target": "es5",
        "sourceMap": true,
        "outDir": "./dist/",
        "baseUrl": "./",
        "incremental": true,
        "strict": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "paths": {
            "@/*": ["./src/*"],
        }
    },
    "include": [
        "src"
    ]
}